@model IEnumerable<PhotoFiler.Models.FileHash>

@{
    ViewBag.Title = "List";
}

<h2>@ViewBag.Total files found</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Size)
        </td>
        <td>
            @Html.ActionLink("View", "Index", new { hash = item.Hash }) |
            @Html.ActionLink("Download", "Download", new { hash = item.Hash })
        </td>
    </tr>
}
</table>

@if (ViewBag.Previous > 0) {
    @Html.ActionLink("<<", "List", new { page = ViewBag.Previous, count = ViewBag.Count });
}

<span>Page @ViewBag.Current / @ViewBag.Max</span>

@if (ViewBag.Next <= ViewBag.Max)
{
    @Html.ActionLink(">>", "List", new { page = ViewBag.Next, count = ViewBag.Count })
}

