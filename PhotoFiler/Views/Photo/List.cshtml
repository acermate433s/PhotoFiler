@using PhotoFiler.Helpers

@model IEnumerable<PhotoFiler.Helpers.IHashedPhoto>

@{
    ViewBag.Title = "List";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Resolution)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resolution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                <a href="@Url.Action("Index", new { hash = item.Hash })">
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true" title="View"></span>
                </a>

                <a href="@Url.Action("Download", new { hash = item.Hash })">
                    <span class="glyphicon glyphicon-download" aria-hidden="true" title="Download"></span>
                </a>
            </td>
        </tr>
    }
</table>

<div class="row">
    <div class="col-xs-12 text-center">
        @if (ViewBag.Previous > 0)
        {
            @Html.ActionLink(" ", "List", new { page = ViewBag.Previous, count = ViewBag.Count }, new { @class = "glyphicon glyphicon-backward" });
        }

        <span>Page @ViewBag.Current / @ViewBag.Max</span>

        @if (ViewBag.Next <= ViewBag.Max)
        {
            @Html.ActionLink(" ", "List", new { page = ViewBag.Next, count = ViewBag.Count }, new { @class = "glyphicon glyphicon-forward" })
        }
    </div>
</div>